<h1>Eat-da-Burger</h1>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block }}
    {{/unless}}
  {{/each}}
</ul>

  {{#each burger}}
    {{#if devoured}}
   <div>{{id}}. {{burger_name}}</div>
       {{/if}}
  {{/each}}
</ul>

<h2>Enter a burger you want to eat then click submit!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
